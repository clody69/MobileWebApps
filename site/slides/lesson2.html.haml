            $("[contenteditable]").focus(function() {
              var $this = $(this);
              $this.data('before', $this.html());
              return $this;          
            });
            $("[contenteditable]").live('blur', function() {
                var $this = $(this);
                if ($this.data('before') !== $this.html()) {
                    $this.data('before', $this.html());
                    $this.trigger('change');

                    var msg = {};
                    msg['id'] = $this.attr('data-id');
                    msg[$this.attr('data-name')] = $this.html();
